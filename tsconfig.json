{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@c4dt/dynacred": [
        "src/lib/dynacred",
        "node_modules/@c4dt/dynacred"
      ],
      "@dedis/cothority": [
        "src/lib/cothority",
        "node_modules/@dedis/cothority"
      ],
      "@dedis/cothority/*": [
        "src/lib/cothority/*",
        "node_modules/@dedis/cothority/*"
      ],
      "@dedis/kyber": [
        "src/lib/kyber",
        "node_modules/@dedis/kyber"
      ],
      "@dedis/kyber/*": [
        "src/lib/kyber/*",
        "node_modules/@dedis/kyber/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
